{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@configs/*": ["configs/*"],
      "@types/*": ["types/*"],
      "@auth/*": ["apps/auth/*"],
      "@profile/*": ["apps/profile/*"],
      "@/*": ["*"]
    },

    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", ".eslintrc.js"]
}
